<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>tinh</servlet-name>
        <servlet-class>controller.tinh</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TinhServlet</servlet-name>
        <servlet-class>controller.TinhServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToanServlet</servlet-name>
        <servlet-class>controller.ToanServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tinh</servlet-name>
        <url-pattern>/tinh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>user</param-name>
        <param-value>minhtd</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>minhtd123</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>TinhServlet</servlet-name>
        <url-pattern>/tinhtoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToanServlet</servlet-name>
        <url-pattern>/toan</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
